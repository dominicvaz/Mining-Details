<mvc:View controllerName="app.dominicstevevazs08.controller.MidView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="idMidPage" title="{i18n>titleMid}" showNavButton="true" navButtonPress="onToMining">
        <f:SimpleForm editable="true">
            <Label text="{i18n>LocId}" ></Label>
            <Text text="{MiningDetails>LocationId}"></Text>

            <Label text="{i18n>LocDesc}" ></Label>
            <Text text="{MiningDetails>LocationDesc}"></Text>

            <Label text="{i18n>ResAlloc}" ></Label>
            <Text text="{MiningDetails>ResourceAllocated}"></Text>

            <Label text="{i18n>Totcost}"></Label>
            <Text text="{MiningDetails>TotalCost}"></Text>

            <Label text="{i18n>RepPoss}"></Label>
            <Text text="{MiningDetails>RepPossMin}" ></Text>

            <Label text="{i18n>Drills}"></Label>
            <Text text="{MiningDetails>NoOfDrills}" ></Text>

            <Label text="{i18n>Type}"></Label>
            <Text text="{MiningDetails>TypeMineral}" ></Text>


        </f:SimpleForm>
        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>update}" type="Emphasized"  press="onDetailView"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
