<mvc:View controllerName="app.dominicstevevazs08.controller.AllDetailsView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:comp="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>titleAllDetails}" showNavButton="true" navButtonPress="onToMiningDetails">
     <content/>
        <comp:FilterBar>
        <comp:filterItems>
            <comp:FilterItem name="filter LocID">
                <comp:control>
        <Input id= "idFilterLoc" placeholder="Location ID" liveChange="onFilter"></Input>
                </comp:control>
            </comp:FilterItem>
            <comp:FilterItem name="filter LocDesc">
            <comp:control>
        <Input id= "idFilterDesc" placeholder="Location Description" liveChange="onFilter"></Input>
            </comp:control>
            </comp:FilterItem>
            <comp:FilterItem name="filter ResAlloc">
            <comp:control>
        <Input id= "idFilterResAlloc" placeholder="Resources Allocated" liveChange="onFilter"></Input>
            </comp:control>
            </comp:FilterItem>
            <comp:FilterItem name="filter TotCost">
            <comp:control>
        <Input id= "idFilterTotCost" placeholder="Total Cost" liveChange="onFilter"></Input>
            </comp:control>
            </comp:FilterItem>
            <comp:FilterItem name="filter RepPoss">
            <comp:control>
        <Input id= "idFilterRepPoss" placeholder="Report of Mineral" liveChange="onFilter"></Input>
            </comp:control>
            </comp:FilterItem>
            <comp:FilterItem name="filter Drills">
            <comp:control>
        <Input id= "idFilterDrills" placeholder="No of Drills" liveChange="onFilter"></Input>
            </comp:control>
            </comp:FilterItem>
            <comp:FilterItem name="filter Type">
            <comp:control>
        <Input id= "idFilterType" placeholder="Mineral type" liveChange="onFilter"></Input>
            </comp:control>
            </comp:FilterItem>
            </comp:filterItems>
        </comp:FilterBar>

<Table id= "idMiningTab" items="{MiningDetails>/}">
            <columns>
                <Column >
                    <Text text="{i18n>LocId}"></Text>
                </Column>
                <Column >
                    <Text text="{i18n>LocDesc}"></Text>
                </Column>
                <Column >
                    <Text text="{i18n>ResAlloc}"></Text>
                </Column>
                <Column >
                    <Text text="{i18n>Totcost}"></Text>
                </Column>
                <Column >
                    <Text text="{i18n>RepPoss}"></Text>
                </Column>
                 <Column >
                    <Text text="{i18n>Drills}"></Text>
                </Column>
                <Column >
                    <Text text="{i18n>Type}"></Text>
                </Column>
            </columns>
            <ColumnListItem >
                <cells>
                    <Text text="{MiningDetails>LocationId}"></Text>
                    <Text text="{MiningDetails>LocationDesc}"></Text>
                    <Text text="{MiningDetails>ResourceAllocated}"></Text>
                    <Text text="{MiningDetails>TotalCost}"></Text>
                    <Text text="{MiningDetails>RepPossMin}"></Text>
                    <Text text="{MiningDetails>NoOfDrills}"></Text>
                    <Input value="{MiningDetails>TypeMineral}" showValueHelp="true" valueHelpRequest="onF4Help"></Input>
                </cells>
            </ColumnListItem>
        </Table>
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>